{% macro main(params,requestCache) %}
    {% import "partials/components/_svg-icons.twig" as svg %}
    {% import "partials/components/need-help.twig" as help %}
    
    <header class="order-history-header">
       
        {% if params.back %}
            <div class="cell">
                <a href="{{ url(requestCache, [params.back.location]) }}" class="order-history-header__go-back u-style-weight-bold u-style-text-transform-uppercase u-animate-underline">{{ params.back.text }} {{ svg.back_arrow }} </a>
                {% if params.button %}
					<a href="{{ params.link }}" class="order-history-header__get-help u-style-weight-bold u-background-gold u-style-text-transform-uppercase">{{ params.button.text }}</a>					
				{% endif %}
            </div>
        {% endif %}
        <h1 class="order-history-header__title u-style-display-lg u-style-weight-bold u-style-width-100 u-style-text-center">{{ params.title }} {{ params.orderNumber }}</h1>
        <h3 class="order-history-header__subitle u-style-weight-bold text-center" >{{ params.subtitle }}</h3>
    </header>
    
{% endmacro %}
